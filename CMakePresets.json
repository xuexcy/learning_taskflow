{
    "version": 8,
    "configurePresets": [
        {
            "name": "clang_19.1.1",
            "displayName": "Clang 19.1.1 x86_64-apple-darwin24.0.0",
            "description": "Using compilers: C = /usr/local/opt/llvm/bin/clang, CXX = /usr/local/opt/llvm/bin/clang++",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
                "CMAKE_C_COMPILER": "/usr/local/opt/llvm/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/local/opt/llvm/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}
